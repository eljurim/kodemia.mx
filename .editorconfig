root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.json,*.yml]
indent_style = space
indent_size = 2

# Spaces in blade
[*.blade.php]
indent_style = space
indent_size = 2

# Spaces in php
[*.php]
indent_style = space
indent_size = 2

# Spaces in js
[*.js]
indent_style = space
indent_size = 2

# Spaces in less
[*.less]
indent_style = space
indent_size = 2

# Spaces in html
[*.html]
indent_style = space
indent_size = 2
